      <!-- ACTIONS -->
      <section id="actions" class="py-4 mb-4 bg-light">
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <a href="http://localhost:3000/admtestimonials/_testimonials" class="btn btn-light btn-block">
                <i class="fas fa-arrow-left"></i> Back To _Testimonials
              </a>
            </div>
            <div class="col-md-3">
              <a class="btn btn-success btn-block" onclick="savePost()">
                <i class="fas fa-check"></i> Save Changes
              </a>
            </div>
            <div class="col-md-3">
              <a class="btn btn-danger btn-block" onclick="Deletedata()">
                <i class="fas fa-trash"></i> Delete Testimonials
              </a>
            </div>
          </div>
        </div>
      </section>
  
      <!-- DETAILS -->
      <section id="details">
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="card">
                <div class="card-header">
                  <h4>Edit About</h4>
                </div>
                <div class="card-body">
                  <form id="savePost" action='/admtestimonials/_testimonials/update' method='post'>
                    <div class="form-group">
                      <label for="id">ID</label>
                      <input
                        type="text"
                        name="id"
                        class="form-control"
                        value="<%= data[0].id %>"
                      />
                    </div>
                    <div class="form-group">
                      <label for="name">Name</label>
                      <input
                        type="text"
                        name="name"
                        class="form-control"
                        value="<%= data[0].name %>"
                      />
                    </div>
                    <div class="form-group">
                      <label for="job">Job</label>
                      <input
                        type="text"
                        name="job"
                        class="form-control"
                        value="<%= data[0].job %>"
                      />
                    </div>
                    <div class="form-group">
                        <label for="talk">Talk</label>
                        <input
                          type="text"
                          name="talk"
                          class="form-control"
                          value="<%= data[0].talk %>"
                        />
                      </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
  
      <!-- FOOTER -->
      <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
